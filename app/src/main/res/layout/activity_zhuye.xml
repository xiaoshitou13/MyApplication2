<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.man.ZhuyeActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/frag"
       android:layout_above="@+id/image"
       />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:id="@+id/image"
        android:layout_above="@+id/radio"/>

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sy"
            android:button="@null"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/syd"
            android:checked="true"
            android:text="首页" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ss"
            android:button="@null"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/sousuo"
            android:text="分类" />

        <RadioButton
            android:id="@+id/gouwuce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/gwc"
            android:text="购物车" />


        <RadioButton
            android:id="@+id/me"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/wode"
            android:text="我的" />



    </RadioGroup>

</RelativeLayout>

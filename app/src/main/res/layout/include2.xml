<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F76C2F"
        android:id="@+id/lins">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/leftjiantou"
            android:layout_centerInParent="true"
            android:id="@+id/left"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/ed"
            android:background="@mipmap/peise"
            android:layout_alignTop="@+id/left"
            android:layout_toLeftOf="@+id/right"
            android:layout_toRightOf="@+id/left"
            android:hint="搜索一下"
            android:textColorHint="#ffff"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/youjiantou"
            android:id="@+id/right"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lins"
        android:background="#ffffff">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftbutton"
            android:background="#ffffff"
            android:text="综合排序"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/middlebutton"
            android:layout_toStartOf="@+id/middlebutton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middlebutton"
            android:background="#ffffff"
            android:text="销售优先"

            android:layout_toLeftOf="@+id/rightbutton"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightbutton"
            android:background="#ffffff"
            android:text="筛选"
            android:layout_toLeftOf="@+id/right_locn"
          />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/right_locn"
            android:src="@mipmap/listgrete"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>



</RelativeLayout>

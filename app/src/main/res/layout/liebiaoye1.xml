<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Liebiaoicon1"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liebiapname1"
        android:text="哈哈哈哈"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/yisou1"
        android:layout_toRightOf="@+id/Liebiaoicon1"
        android:layout_toEndOf="@+id/Liebiaoicon1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price1"
        android:text="$ 80000.00"
        android:textColor="#8080"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/liebiapname1"
        android:layout_alignStart="@+id/liebiapname1"
        android:layout_marginBottom="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已售： 0 件"
        android:id="@+id/yisou1"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_toRightOf="@+id/price"
        android:layout_toEndOf="@+id/price"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textSize="10sp"/>
</RelativeLayout>
